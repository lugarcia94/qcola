.filter 
    font-size: 14px
    font-weight: regular 


    &__item
        position: relative 
        padding: 3px 0

    &__input 
        position: absolute 
        opacity: 0

    &__title 
        font-size: 16px
        font-weight: bold 
        text-transform: uppercase 
        padding: 16px 0 10px

    &__name 
        margin-right: 3px

    &__count 
        font-size: 12px
        font-weight: regular 
        color: rgba(0,0,0,.5)

    &__label 
        display: flex 
        justify-content: flex-start 
        align-items: center
        cursor: pointer
        
        &:before 
            content: ''
            display: flex 
            justify-content: center 
            align-items: center
            width: 16px
            height: 16px 
            margin-right: 3px
            border: solid 1px rgba(0,0,0,.5)
            border-radius: 3px
            font-size: 10px

    &__input:checked
        + .filter 
            &__label:before 
                icon: '\f00c'
    &__actions
        padding: 20px 0

    &__button 
        width: 100%
