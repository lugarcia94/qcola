.newsletter 
    container: viewport 
    margin: (gutter) auto

    &__container 
        padding: (gutter) 0 
        border-top: solid 1px rgba(0,0,0,.1)
        border-bottom: solid 1px rgba(0,0,0,.1)

    &__header 
        text-align: center
        margin-bottom: (gutter / 2)

    &__title 
        font-size: 22px
        font-weight: bold 
        line-height: 1.2

        span 
            display: block
            font-size: 26px

    &__form 
        margin: -5px

    &__box, &__actions
        padding: 5px 

    &__description 
        font-size: 14px

    &__input, &__button
        width: 100% 

    &__button 
        padding: 0 (gutter / 2)

@media (min-width: 768px)
    .newsletter
        &__form
            display: flex 
            justify-content: center
            align-items: center

        &__box
            flex: 1
            min-width: 0

@media (min-width: 992px)
    .newsletter 
        &__container 
            display: flex 
            justify-content: space-between
            align-items: center
        
        &__header 
            display: flex 
            justify-content: space-between
            align-items: center
            margin: 0 -(gutter / 2)
            text-align: left
            
        &__title, &__description, &__box, &__actions
            padding: (gutter / 2)

        &__main 
            flex: 1
            min-width: 0
            margin-left: gutter

        

    

    