.fake-select 
    position: relative 

    &__label
        display: block 
        height: 45px 
        padding: '0 0 0 %s' % (gutter / 2)
        margin-right: 45px

        font-size: 14px
        font-weight: regular 
        line-height: 45px
        text-transform: uppercase
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden

        &:after 
            icon: '\f078'
            position: absolute 
            right: 0 
            top: 0
            display: flex
            justify-content: center 
            align-items: center
            width: 45px
            height: 100% 
            font-size: 10px 

    select 
        position: absolute 
        top: 0 
        left: 0

        width: 100% 
        height: 100%
        border: 0
        background: none 
        opacity: 0